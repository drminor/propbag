                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:mod="clr-namespace:PropBagTestApp.Models"
                    xmlns:pb="clr-namespace:DRM.PropBag.ControlsWPF;assembly=WPFControls"
                    xmlns:tspb="clr-namespace:DRM.TypeSafePropertyBag;assembly=TypeSafePropertyBag">


